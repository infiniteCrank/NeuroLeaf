{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6", // or "CommonJS" if you're Node-first
        "outDir": "./dist",
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": [
            "DOM",
            "ES6"
        ]
    },
    "include": [
        "src/**/*"
    ]
}